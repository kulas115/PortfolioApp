<div class="inner cover">

  <h1 class="cover-heading">Who Am I?</h1>

  <div class="row">

    <div class="col-md-12">

      <div class="card-contact-about">

        <dic class="card">

          <div class="card-block-left">

            <div class="row">

              <div class="col-md-4 col-sm-12 col-12 heading-black">

                <%= image_tag "profile.jpg", width: '100%', alt: "Profile image", class: 'profile-image' %>

                <div class="skills py-3">

                  <h5>My skills distribution:</h5>

                    <% @skills.each do |skill| %>

                      <h6><%= skill.title %></h6>

                      <div class="skill">

                        <div class="progress">

                          <div
                            class="progress-bar  bg-warning"
                            role="progressbar"
                            aria-valuenow="<%= skill.percent_utilized %>"
                            aria-valuemax="100"
                            style="width: <%= skill.percent_utilized %>%;"
                          >
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>

            <div class="col-md-8 col-sm-12">
              <div class="row">

                <div class="col-md-12">
